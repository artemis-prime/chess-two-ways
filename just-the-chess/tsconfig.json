{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es2022",
    "declaration": true,
    "module": "esnext",
    "noImplicitAny": false,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}