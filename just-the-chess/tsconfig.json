{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2018",
    "declaration": true,
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "dist"
  ],
}