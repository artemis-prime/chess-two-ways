{
  "name": "@artemis-prime/chess-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.17",
  "scripts": {
    "build:first-time": "yarn install && yarn prepare:serve",
    "build:domain": "yarn workspace @artemis-prime/chess-core build",
    "build:web": "yarn workspace @artemis-prime/chess-web build",
    "tcheck:web": "yarn workspace @artemis-prime/chess-web tcheck",
    "prepare:web": "yarn build:domain && yarn refresh:web",
    "refresh:web": "yarn clean:web && yarn install",
    "serve:web": "yarn workspace @artemis-prime/chess-web start",
    "clean:domain": "yarn workspace @artemis-prime/chess-core clean",
    "clean:web": "yarn workspace @artemis-prime/chess-web clean",
    "clean:rn": "yarn workspace @artemis-prime/chess-react-native clean",
    "clean:all": "rm -rf ./node_modules && yarn clean:domain && yarn clean:web && yarn clean:rn"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.24",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  },
  "workspaces": {
    "packages": [
      "domain/chess-core",
      "apps/chess-web",
      "apps/chess-cli",
      "apps/chess-rn"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@react-native-community/**",
      "**/hermes-engine",
      "**/hermes-engine/**",
      "**/jsc-android",
      "**/jsc-android/**",
      "**/react-native-codegen",
      "**/react-native-codegen/**",
      "**/react-native-gradle-plugin",
      "**/@bam.tech/react-native-make"
    ]
  },
  "dependencies": {
    "react": "18.2.0",
    "mobx": "^6.5.0"
  }
}
