{
  "name": "@artemis-prime/chess-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "yarn@1.22.17",
  "scripts": {
    "build:domain": "yarn workspace @artemis-prime/chess-domain build && yarn clean:web && yarn install",
    "build:web": "yarn install && yarn workspace @artemis-prime/chess-web build",
    "serve:web": "yarn workspace @artemis-prime/chess-web start",
    "clean:domain": "yarn workspace @artemis-prime/chess-domain clean",
    "clean:web": "yarn workspace @artemis-prime/chess-web clean",
    "clean:all": "rm -rf ./node_modules && yarn clean:domain && yarn clean:web"
  },
  "devDependencies": {
    "@types/node": "^18.15.3",
    "ts-node": "^10.9.1"
  },
  "workspaces": {
    "packages": [
      "packages/chess",
      "packages/web"
    ]
  },
  "dependencies": {
    "typescript": "^5.0.2"
  }
}
