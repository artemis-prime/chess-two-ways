{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0",
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}